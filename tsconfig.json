{
  "compilerOptions": {
    "baseUrl": "./",
    "strict": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "target": "ES6",
    "types": [
      "vue/jsx",
      "node"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
  },
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "./.dev/*.*",
    "./docs/**/*.*",
    "./scripts/**/*.*",
    "./package.json"
  ],
  "exclude": [
    "scripts/dev/dev-env",
    "docs/guide/refreshLayoutSizeDemo.tsx",
    "es",
    "node_modules/"
  ]
}
